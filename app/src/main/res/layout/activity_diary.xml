<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.activity.MainActivity">

    <Button
        android:text="@string/home_button"
        android:layout_width="75dp"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button"
        android:onClick="homePage (MainActivity)"
        android:textColor="@android:color/background_light"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textAllCaps="false" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_input_add"
        android:id="@+id/imageButton"
        android:layout_alignTop="@+id/button4"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/add_button"
        android:onClick="AddPage (MainActivity)"
        android:backgroundTint="@android:color/transparent"
        android:tint="?android:attr/colorActivatedHighlight" />


    <Button

        android:text="@string/diary_button"
        android:layout_width="75dp"
        android:layout_height="42dp"
        android:id="@+id/button2"
        android:onClick="diaryPage (MainActivity)"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/imageButton"
        android:layout_toStartOf="@+id/imageButton"
        android:textColor="?attr/colorBackgroundFloating"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textAllCaps="false" />

    <Button
        android:text="@string/more_button"
        android:layout_width="75dp"
        android:layout_height="42dp"
        android:id="@+id/button3"
        android:onClick="MorePage (MainActivity)"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton"
        android:layout_marginLeft="73dp"
        android:layout_marginStart="73dp"
        android:textColor="@android:color/background_light"
        android:textAllCaps="false"
        android:backgroundTint="@android:color/holo_blue_dark" />

    <Button
        android:text="@string/Stats_button"
        android:layout_width="75dp"
        android:layout_height="42dp"
        android:id="@+id/button4"
        android:onClick="statsPage (MainActivity)"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton"
        android:textColor="@android:color/background_light"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textAllCaps="false" />



    <TextView
        android:text="e.g. hang out with friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvsecond"
        android:layout_marginTop="40dp"
        android:id="@+id/tvfirst"
        android:textColor="@android:color/black" />

    <TextView
        android:text="e.g. Read book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:id="@+id/tvsecond"
        android:layout_below="@+id/tvthird"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black" />

    <TextView
        android:text="e.g. Run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:id="@+id/tvthird"
        android:layout_below="@+id/mLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black" />

    <TextView
        android:text="December"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mLabel"
        android:elevation="1dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black" />

    <ImageButton
        android:layout_height="50px"
        app:srcCompat="@android:drawable/ic_menu_revert"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageButton5"
        android:layout_alignBottom="@+id/mLabel"
        android:layout_width="70px"
        android:backgroundTint="@android:color/transparent"
        android:tint="@android:color/holo_purple" />

    <Button
        android:text="@string/addactivity"
        android:layout_width="120dp"
        android:layout_height="42dp"
        android:layout_marginTop="71dp"
        android:id="@+id/baddactivity"
        android:onClick="AddPage (MainActivity)"
        android:textColor="@android:color/background_light"
        android:backgroundTint="@android:color/holo_purple"
        android:textAllCaps="false"
        android:layout_below="@+id/tvfirst"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp" />

    <TextView
        android:text="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dlabel"
        android:layout_alignBaseline="@+id/mLabel"
        android:layout_alignBottom="@+id/mLabel"
        android:layout_toLeftOf="@+id/mLabel"
        android:layout_toStartOf="@+id/mLabel"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="2050"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ylabel"
        android:layout_alignBaseline="@+id/mLabel"
        android:layout_alignBottom="@+id/mLabel"
        android:layout_alignLeft="@+id/baddactivity"
        android:layout_alignStart="@+id/baddactivity"
        android:textColor="@android:color/black" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvthird"
        android:layout_alignRight="@+id/baddactivity"
        android:layout_alignEnd="@+id/baddactivity"
        android:id="@+id/checkBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvsecond"
        android:layout_alignLeft="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox"
        android:id="@+id/checkBox2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvfirst"
        android:layout_alignRight="@+id/checkBox2"
        android:layout_alignEnd="@+id/checkBox2"
        android:id="@+id/checkBox3" />

</RelativeLayout>
